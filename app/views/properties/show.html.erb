<p id="notice"><%= notice %></p>

<h1>閲覧</h1>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.price %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.memo %>
</p>

<hr>
<% n = 0 %>
<% @stations.each do |stations| %>
 <% if @property.stations.any? %>
  <h2>
    最寄り駅<%= n += 1 %>
  </h2>

  <p>
    <strong>路線名</strong>
    <%= stations.route %>
  </p>

  <p>
    <strong>駅名</strong>
    <%= stations.station_name %>
  </p>

  <p>
    <strong>徒歩分数</strong>
    <%= stations.time %>分
  </p>
  <% end %>
<% end %>


<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
